@model EcoShrimp.Client.ViewModels.Request.RequestVM

<div class="modal fade" style=" top: 140px; left: -100px; z-index: 10000" id="RequestProduct" tabindex="-1" role="dialog" aria-labelledby="RequestProductLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 700px">
            <form asp-action="Requests" asp-controller="Product" id="RequestProductForm" method="post">
                <div class="modal-header">
                    <h4 class="modal-title fs-6" id="RequestProductLabel">Yêu cầu báo giá</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="padding-top: 0px">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-end" style="margin-top: 7px">
                            <span style="font-size: 12px;">Ngày yêu cầu: @DateTime.Now.ToString("dd/MM/yy")</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mt-1 mb-1">
                            <input type="text" asp-for="CompanyName" class="form-control" placeholder="Tên công ty *" />
                            <span id="CompanyNameError" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-1 mb-1">
                            <input type="text" asp-for="Email" class="form-control" placeholder="Email *" />
                            <span id="EmailError" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-1 mb-1">
                            <input type="text" asp-for="Phone" class="form-control" placeholder="Số điện thoại" />
                            <span asp-validation-for="Phone" id="NameError" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-1 mb-1">
                            <input type="text" asp-for="Address" class="form-control" placeholder="Địa chỉ" />
                            <span asp-validation-for="Address" id="NameError" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-1 mb-1">
                            <textarea class="form-control" asp-for="Content" rows="4" height="80px" placeholder="Sản phẩm cần tư vấn báo giá *"></textarea>
                            <span id="ContentError" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Gửi ngay</button>
                </div>
            </form>
        </div>
    </div>
</div>