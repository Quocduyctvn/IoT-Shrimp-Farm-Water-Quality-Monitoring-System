@using EcoShrimp.Data.Entities
@model EcoShrimp.Client.ViewModels.Request.RequestVM
@{
	var shrimp = TempData["shrimp"] as AppShrimp;
}

<section class="contact-style1-area pt-4">
	<div class="contact-form-box1_bg" style="background-image: url(assets-template/images/resources/contact-form-box1_bg.png);"></div>
	<div class="thm-round-box1">
		<h5>
			Cùng <br> @shrimp.WebsiteName<br> trao đối những thắc mắc của bạn!!
		</h5>
	</div>
	<div class="gray-bg"></div>
	<div class="container">
		<div class="row">
			<div class="col-xl-6">
				<div class="contact-style1-content">
					<div class="shape1" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="2000">
						<img class="paroller-2" src="assets-template/images/shape/thm-shape-2.png" alt="">
					</div>
					<div class="sec-title">
						<div class="sub-title">
							<h5>@shrimp.WebsiteName</h5>
						</div>
						<h2 style="font-size: 18px">
							Rất vui được hỗ trợ bạn
							<br>và đồng hành cùng bạn giải quyết yêu cầu này một cách tốt nhất.
						</h2>
						<div class="decor">
							<img src="assets-template/images/shape/decor.png" alt="">
						</div>
					</div>
					<div class="inner-content">
						<div class="quick-contact-box">
							<div class="icon">
								<span class="icon-calling"></span>
							</div>
							<div class="title">
								<h3>Liên hệ nhanh </h3>
								<h2><a href="tel:+50033333">@shrimp.Phone</a></h2>
							</div>
						</div>
						<div class="text">
							<p>
								Vui lòng gọi cho chúng tôi nếu bạn có bất kỳ câu hỏi nào
								<br>hoặc để thiết lập tài khoản của bạn.
							</p>
						</div>
					</div>
				</div>
			</div>

			<div class="col-xl-6" id="contact-section">
				<div class="contact-form-box1">
					<div class="top-title">
						<h2>Liên hệ với @shrimp.WebsiteName</h2>
					</div>
					<form class="default-form1" asp-Action="Contact" asp-controller="Home" method="post">
						<div class="input-box">
							<input type="text" asp-for="CompanyName" placeholder="Tên của bạn" required="">
							<div class="icon">
								<i class="fa fa-user" aria-hidden="true"></i>
							</div>
						</div>
						<div class="input-box">
							<input type="email" asp-for="Email" placeholder="Địa chỉ Email" required="">
							<div class="icon">
								<i class="fa fa-envelope" aria-hidden="true"></i>
							</div>
						</div>
						<div class="input-box">
							<textarea asp-for="Content" placeholder="Nội dung liên hệ " style="padding: 10px 65px"></textarea>
							<div class="icon">
								<i class="far fa-comment-dots" aria-hidden="true"></i>
							</div>
						</div>
						<div class="button-box">
							<div class="right" style="margin-left: auto">
								<button class="btn-one" type="submit">
									<span class="round"></span>
									<span class="txt">Gửi ngay</span>
								</button>
							</div>
						</div>
					</form>

				</div>
			</div>
		</div>
	</div>
</section>

<section class="google-map-area pt-1 pb-0">
	<div class="container pt-5 ">
		<div class="row">
			<div class="col-xl-12">
					@if (shrimp.Map != null)
					{
						@Html.Raw(shrimp.Map)
					}
			</div>
		</div>
	</div>
</section>